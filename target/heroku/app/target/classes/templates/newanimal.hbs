{{#partial "content"}}

    <nav class="navbar">
        <div class="container">
            <a href="/" class="btn aqua-gradient text-white"></a>
        </div>

        <div class="container-fluid">
            <div class="col-6">
                <h1>New Animal</h1>
                <br>
                <br>
                <hr>
                <br>
                <br>
                <form action="/animal" method="post">
                    <div class="form-group">
                        <label for="name">Add Animal name</label>
                        <br>
                        <input id="name" placeholder="Enter Name of the Animal" name="name" class="form-control" type="text" required>
                    </div>
                    <button type="submit" class="button btn-warning">Submit</button>
                </form>
            </div>
            <div class="col-6">
                <h3>Add Animals!</h3>
                <br>
                <img src="/images/animals.jpg">
                <br>
                <br>
                <a href="/animal" class="btn btn-outline-primary"> Explore more </a>
            </div>
        </div>
    </nav>


{{/partial}}
{{> layout.hbs}}