{{#partial "content"}}

    <div class="container text-start mx-auto">

        <div class="card mb-3 mx-auto" style="max-width: 540px;">
            <div class="row g-0">
                <div class="col-md-8">
                    <div class="card-body">
                        <h5 class="card-title">{{endangered.name}}</h5>
                        <p class="card-text">
                        <p>Name: {{endangered.name}}</p>
                        <p>Age: {{endangered.type}}</p>
                        <p>SuperPower: {{endangered.age}}</p>
                        <p>Weakness: {{endangered.health}}</p>
                        <p class="card-footer">
                        <p><a class="btn btn-danger justify-content-left" href="/endanger/{{endangered.id}}/delete">Kill {{endangered.name}}</a> </p>
                    </div>
                </div>
            </div>
        </div>

    </div>

{{/partial}}
{{> layout.hbs}}